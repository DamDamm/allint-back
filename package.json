  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest",
    "dev": "debug=* npx nodemon",
    "db:create": "psql -U allint -d allint -f data/create_tables.sql",
    "db:migrate": "psql -U allint -d allint -f data/migrate_user.sql",
    "db:populate": "psql -U allint -d allint -f data/populate_tables.sql",
    "db:reset": "npm run db:create && npm run db:migrate && npm run db:populate"
  },
